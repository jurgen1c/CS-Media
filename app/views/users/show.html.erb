<div class="container my-2">
  <div class="row">
    <div class="col-3">
      <%= image_tag(@user.avatar_thumbnail, class: 'rounded-circle') if @user.avatar.attached? %>
    </div>
    <div class="col-9">
      <h1><%= @user.name %></h1>
      <%= @user.username %>
      <br />
      <%= @user.bio %>
    </div>
  </div>
</div>
<br>
<% @user.follows.each do |follow| %>
  <%= follow.name%>
  <%= follow.username%>
  <%= nu_display(current_user, follow)%>
<%end%>
<br>
<% @user.articles.each do |article| %> 
  <%= article.title %>
  <%= article.votes.count %>
  <br>
  <%= article.cover %>
  <hr>
  <%= article.body %>
<%end%>

  
