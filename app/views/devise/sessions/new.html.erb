<div class="center flex-column align-content-center justify-content-center w-25 p-3">

  <h2 class="my-title m-3">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, class: 'my-text' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field my-2">
      <%= f.label :password, class: 'my-text' %><br />
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field my-1">
        <%= f.check_box :remember_me, class: 'my-text'%>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class:'btn btn-outline-primary my-2' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
