<div class="art-form mx-auto p-5">
  <%= simple_form_for(@article) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
    <div class="form-inputs">
      <%= f.label :title %>
      <%= f.text_field :title, placeholder: 'Add Title' %> 
    </div>
    <div>
      <%= f.label :content%>
      <%= f.rich_text_area :content, placeholder: 'Add content' %> 
    </div>
    <div>
      <h3>Article Sources</h3>
      <%= f.simple_fields_for :source do |s| %>
        <%= s.error_notification %>
        <%= s.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
        <div class="form-inputs">
          <%= s.label :title%>
          <%= s.text_field :title %>
        </div>
        <div>
          <%= s.label :description %>
          <%= s.rich_text_area :description %>
        </div>
      <% end %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
