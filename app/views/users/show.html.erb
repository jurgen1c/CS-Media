<div class="container my-2">
  <div class="row">
    <div class="col-3">
      <%= image_tag(@user.avatar_thumbnail, class: 'rounded-circle') if @user.avatar.attached? %>
    </div>
    <div class="col-9">
      <h1><%= @user.name %></h1>
      <%= @user.username %>
      <br />
      <%= @user.bio %>
    </div>
  </div>
</div>
<div class="flex-wrap">
  <% @user.follows.each do |follow| %>
    <div class="card">
      <h3>
        <%= follow.name%>
      </h3>
      <h3>
        <%= follow.username%>
      </h3>
    </div>
    <%= nu_display(current_user, follow)%>
  <%end%>
</div>
<div>
  <div class="row">
    <% @user.articles.each do |article| %> 
      <h2><%= link_to article.title, article %></h2>
      <%= article.votes.count %>
      <br>
      <%= image_tag(article.cover) %>
      <hr>
      <%= truncate(strip_tags(article.rich_text_body.to_s), length: 150) %>
    <%end%>
  </div>
</div>

  
