              <div>
                <%= link_to article.title, article %>
                <%= vote_or_dislike_btn(article) %>
                <br>
                <%= article.body %>
              </div>
            <%end%>
          </div>
        </div>
      </div>
    </div>
    <div class="tab-pane fade" id="pills-fashion" role="tabpanel" aria-labelledby="pills-fashion-tab">
      <div class="container">
