<div class="art-form mx-auto p-5">
  <%= form_with model: @article, local: true do |f| %>
    <%= display_errors(article) %>
    <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title, placeholder: 'Add Title' %> 
    </div>
    <div class="field">
      <%= f.label :type %>
      <%= f.select :type_id, Type.all.map {|c| c.id} %>
    </div>
    <div class="field">
      <%= f.label :body%>
      <%= f.rich_text_area :body, placeholder: 'Add content' %> 
    </div>
    <div>
      <h3>Article Sources</h3>
      <%= f.fields_for :sources do |sources_form| %>
        <%= render 'source_fields', f: sources_form %>
      <% end %>
      <%= link_to_add_fields 'Add Source', f, :sources %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
