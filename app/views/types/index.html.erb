        </div>
      </div>
    </div>
    <div class="tab-pane fade" id="pills-politics" role="tabpanel" aria-labelledby="pills-politics-tab">
      <div class="container">
        <div class="row">
          <div class="col-8"></div>
          <div class="col-4">
            <%@politics.articles.each do |article|%>
              <div>
                <%= link_to article.title, article %>
                <%= vote_or_dislike_btn(article) %>
                <%= link_to 'Show', article %>
                <br>
                <%= article.body %>
              </div>
            <%end%>
          </div>
        </div>
      </div>
    </div>
    <div class="tab-pane fade" id="pills-tech" role="tabpanel" aria-labelledby="pills-tech-tab">
      <div class="container">
        <div class="row">
          <div class="col-8"></div>
